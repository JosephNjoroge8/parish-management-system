# Optimized .env configuration for better performance

# === CORE APPLICATION SETTINGS ===
APP_NAME=Parish_Digital_Record_System
APP_ENV=local
APP_KEY=base64:9MTTMFbVk4b/eFjDxuVEzb4N6duYkkFdIpJ8O1tPNjo=
APP_DEBUG=false
APP_URL=http://localhost:8000

# === VITE SETTINGS ===
VITE_APP_ENV=local
VITE_APP_URL=http://localhost:8000

# === LOCALIZATION ===
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# === MAINTENANCE & WORKERS ===
APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=8

# === SECURITY ===
BCRYPT_ROUNDS=10

# === LOGGING (Optimized) ===
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# === DATABASE ===
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=parish_system
DB_USERNAME=root
DB_PASSWORD=fkl@2030

# === SESSION OPTIMIZATION ===
SESSION_DRIVER=file
SESSION_LIFETIME=1440
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# === PERFORMANCE CACHING ===
CACHE_STORE=file
CACHE_PREFIX=parish_cache

# === BROADCASTING ===
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# === QUEUE OPTIMIZATION ===
QUEUE_CONNECTION=database

# === REDIS (For future scaling) ===
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# === MEMCACHED (Alternative caching) ===
MEMCACHED_HOST=127.0.0.1

# === MAIL ===
MAIL_MAILER=log
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# === AWS (For future CDN/storage) ===
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# === VITE BUILD ===
VITE_APP_NAME="${APP_NAME}"

# === PERFORMANCE OPTIMIZATIONS ===
# Enable OPcache in production
OPCACHE_ENABLE=1
OPCACHE_MEMORY_CONSUMPTION=128
OPCACHE_MAX_ACCELERATED_FILES=4000

# Database query optimization
DB_SLOW_QUERY_LOG=1
DB_LONG_QUERY_TIME=2

# View and config caching
VIEW_CACHE_ENABLED=1
CONFIG_CACHE_ENABLED=1

# === ADDITIONAL PERFORMANCE SETTINGS ===
# Reduce session file locking
SESSION_SERIALIZE_HANDLER=php_serialize

# Optimize timezone
APP_TIMEZONE=UTC