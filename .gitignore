# ============================================================================
# PARISH MANAGEMENT SYSTEM - COMPREHENSIVE .GITIGNORE
# ============================================================================
# This file prevents sensitive and unnecessary files from being committed to Git
# Ensure this is properly configured before pushing to GitHub
# ============================================================================

# ============================================================================
# Environment files (CRITICAL - NEVER COMMIT)
# ============================================================================
.env
.env.*
!.env.example
.env.backup
.env.production
.env.local
.env.staging
.env.testing

# Authentication & API Keys
auth.json
oauth-private.key
oauth-public.key

# ============================================================================
# DATABASE FILES (CRITICAL - CONTAINS SENSITIVE DATA)
# ============================================================================
# SQLite databases
*.sqlite
*.sqlite3
*.db
/database/*.sqlite
/database/*.sqlite3
/database/*.db
/database/database.*

# Database backups and dumps
*.sql
*.dump
/database/backups/
/storage/database-backups/

# ============================================================================
# APPLICATION LOGS & TEMPORARY FILES
# ============================================================================
# Laravel logs
/storage/logs/*.log
/storage/logs/*

# General log files
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Runtime data
pids
*.pid
*.seed
*.pid.lock

# ============================================================================
# GENERATED & CACHED FILES
# ============================================================================
# Laravel optimization files
/bootstrap/cache/*.php
/storage/framework/cache/
/storage/framework/sessions/
/storage/framework/views/
/storage/framework/testing/

# Compiled assets (Allow production builds, ignore development artifacts)
/public/hot
/public/storage
# NOTE: /public/build/ is REQUIRED for production - DO NOT IGNORE
