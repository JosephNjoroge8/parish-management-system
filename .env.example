# ====================================
# PRODUCTION ENVIRONMENT CONFIGURATION - FIXED
# ====================================
# Copy this file to your production server at:
# /home2/shemidig/parish_system/.env

# Application Configuration
APP_NAME="Parish Management System"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://parish.quovadisyouthhub.org

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance & Performance
APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ====================================
# DATABASE CONFIGURATION - VERIFIED CREDENTIALS
# ====================================
# These are your actual production database credentials

DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# ====================================
# SESSION & SECURITY CONFIGURATION - ENHANCED
# ====================================
SESSION_DRIVER=database
SESSION_LIFETIME=240
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=quovadisyouthhub.org
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Broadcasting & Queue
BROADCAST_CONNECTION=log
QUEUE_CONNECTION=database

# Cache Configuration - Optimized
CACHE_STORE=database
CACHE_PREFIX=parish_

# Storage
FILESYSTEM_DISK=local

# ====================================
# REDIS & MEMORY CACHE (OPTIONAL)
# ====================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ====================================
# MAIL CONFIGURATION - PRODUCTION SMTP
# ====================================
MAIL_MAILER=smtp
MAIL_HOST=mail.quovadisyouthhub.org
MAIL_PORT=587
MAIL_USERNAME=parish@quovadisyouthhub.org
MAIL_PASSWORD=your_email_password_here
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=parish@quovadisyouthhub.org
MAIL_FROM_NAME="${APP_NAME}"

# ====================================
# SECURITY & SANCTUM CONFIGURATION
# ====================================
SANCTUM_STATEFUL_DOMAINS=parish.quovadisyouthhub.org
# ====================================
# ASSET & VITE CONFIGURATION - PRODUCTION OPTIMIZED
# ====================================
ASSET_URL=http://parish.quovadisyouthhub.org
APP_ASSET_URL=http://parish.quovadisyouthhub.org

# CRITICAL: NO VITE DEV SERVER CONFIGURATION IN PRODUCTION

# ====================================
# CLOUD STORAGE (AWS) - OPTIONAL
# ====================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ====================================
# PRODUCTION OPTIMIZATION SETTINGS
# ====================================
OPTIMIZE_CLEAR_COMPILED=true
VIEW_COMPILED_PATH=/tmp/views

# ====================================
# ADDITIONAL PRODUCTION SECURITY
# ====================================
# Force HTTPS redirect
FORCE_HTTPS=true

# Content Security Policy
# Content Security Policy (disable for development, enable for production)
CSP_ENABLED=false

# Rate limiting for API routes
THROTTLE_API=60,1

# Database query logging (disable in production for performance)
DB_LOG_QUERIES=false

# ====================================
# PUSHER CONFIGURATION (IF USING REAL-TIME FEATURES)
# ====================================
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
