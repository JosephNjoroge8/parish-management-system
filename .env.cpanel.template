# ============================================================================
# PARISH MANAGEMENT SYSTEM - PRODUCTION ENVIRONMENT TEMPLATE
# ============================================================================
# Copy this file to .env in your cPanel directory and configure for production
# NEVER commit the actual .env file to version control
# ============================================================================

APP_NAME="Parish Management System"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://yourdomain.com
APP_TIMEZONE=UTC

# ============================================================================
# DATABASE CONFIGURATION (MySQL for Production)
# ============================================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_username
DB_PASSWORD=your_database_password

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ============================================================================
# SESSION & CACHE CONFIGURATION
# ============================================================================
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_DRIVER=file
CACHE_PREFIX=parish_mgmt

# ============================================================================
# QUEUE CONFIGURATION
# ============================================================================
QUEUE_CONNECTION=database
QUEUE_FAILED_DRIVER=database-uuids

# ============================================================================
# MAIL CONFIGURATION
# ============================================================================
MAIL_MAILER=smtp
MAIL_HOST=mail.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# ============================================================================
# BROADCASTING & PUSHER (Optional)
# ============================================================================
BROADCAST_DRIVER=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# ============================================================================
# FILESYSTEM CONFIGURATION
# ============================================================================
FILESYSTEM_DISK=local

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================
# Set secure session settings
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# CSRF Protection
SANCTUM_STATEFUL_DOMAINS=yourdomain.com

# ============================================================================
# APPLICATION-SPECIFIC CONFIGURATION
# ============================================================================
# Parish Information
PARISH_NAME="Your Parish Name"
PARISH_DIOCESE="Your Diocese"
PARISH_ADDRESS="Your Parish Address"
PARISH_PHONE="+1234567890"
PARISH_EMAIL="info@yourparish.com"

# Report Settings
REPORTS_PER_PAGE=50
MAX_EXPORT_RECORDS=10000
EXPORT_TIMEOUT=300

# Member Settings
MEMBER_PHOTO_MAX_SIZE=2048
MEMBER_DOCUMENT_MAX_SIZE=5120

# ============================================================================
# PERFORMANCE OPTIMIZATION
# ============================================================================
# Asset Optimization
VITE_APP_ENV=production
VITE_APP_URL="${APP_URL}"

# Database Optimization
DB_SLOW_QUERY_LOG=true
DB_SLOW_QUERY_TIME=2

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# ============================================================================
# THIRD-PARTY SERVICES (Configure as needed)
# ============================================================================
# AWS Configuration (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================================================
# DEVELOPMENT OVERRIDES (Remove in production)
# ============================================================================
# Remove or comment out these in production:
# TELESCOPE_ENABLED=false
# DEBUGBAR_ENABLED=false

# ============================================================================
# SECURITY NOTES
# ============================================================================
# 1. Generate APP_KEY using: php artisan key:generate
# 2. Use strong database passwords
# 3. Enable HTTPS in production
# 4. Set APP_DEBUG=false for security
# 5. Configure proper file permissions
# 6. Regular security updates
# ============================================================================